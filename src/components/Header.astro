---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';

let d = new Date();
let year = d.getFullYear();
let month = d.getMonth() + 1;
let day = d.getDate();
let dayofweek = d.getDay();

const dayname = ['SUN','MON','TUE','WED','THU','FRI','SAT'];

---

<header class="header">
	<p>{year}/{month}/{day}（{dayname[dayofweek]}）</p>
	<div class="header__inner">
		<div class="heading__wrapper">
			<a href="/" class="heading__link">
				<h1 class="heading"><span class="heading__main">LOOK</span><span class="heading__sub">Web design notes.</span></h1>
			</a>
		</div>
		<div class="info">
			<p>Design</p>
			<div class="info__x"></div>
			<p>Coding</p>
		</div>

	</div>

</header>
<style lang="scss">
	.header {
		margin-top: 40px;
		
		&__inner {
			border-top: 2px solid var(--black);
			border-bottom: 2px solid var(--black);
			display: flex;
			justify-content: space-between;
			@media (max-width: 768px) {
				// align-items: flex-start;
			}
		}
	}
	.heading {
		padding-block: 16px;
		line-height: 1;
		&__main {
			font-size: 97px;
			letter-spacing: -0.02em;
			@media (max-width: 768px) {
				font-size: 56px;
			}
		}

		&__sub {
			display: inline-block;
			margin-left: 20px;
			font-size: 24px;
			letter-spacing: 0;
			@media (max-width: 768px) {
				margin-left: 0;
				font-size: 18px;
	
			}
		}


	}

	.info {
		margin-block: 10px;
		padding-inline: 30px;
		border-left: 2px solid var(--black);
		display: flex;
		flex-direction: column;
		justify-content: space-between;
		@media (max-width: 768px) {
			padding-right: 0;
			padding-left: 10px;
			font-size: 14px;
		}

		&__x {
			position: relative;
			display: flex;
			align-items: center;
			justify-content: center;

			&::before {
				content: "";
				width: 80px;
				height: 2px;
				background-color: var(--red);
				position: absolute;
				rotate: 60deg;
				@media (max-width: 768px) {
					width: 40px;
				}
			}

			&::after {
				content: "";
				width: 50px;
				height: 2px;
				background-color: var(--red);
				position: absolute;
				rotate: -60deg;
				@media (max-width: 768px) {
					width: 25px;
				}
			}
		}
	}

	@media (max-width: 720px) {
		.social-links {
			display: none;
		}
	}
</style>
