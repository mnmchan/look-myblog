---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
---

<header class="header">
	<div class="header__inner">
		<div class="heading__wrapper">
			<a href="/" class="heading__link">
				<h1 class="heading">LOOK<span>Web design notes.</span></h1>
			</a>
		</div>
		<div class="info">
			<p>Design</p>
			<div class="info__x"></div>
			<p>Coding</p>
		</div>

	</div>

</header>
<style lang="scss">
	.header {
		margin-top: 40px;
		border-top: 2px solid var(--black);
		border-bottom: 2px solid var(--black);

		&__inner {
			display: flex;
			justify-content: space-between;
		}
	}
	.heading {
		font-size: 97px;
		letter-spacing: -0.02em;

		& > span {
			display: inline-block;
			margin-left: 20px;
			font-size: 24px;
			letter-spacing: 0;
		}
	}

	.info {
		margin-block: 10px;
		padding-inline: 30px;
		border-left: 2px solid var(--black);
		display: flex;
		flex-direction: column;
		justify-content: space-between;

		&__x {
			position: relative;
			display: flex;
			align-items: center;
			justify-content: center;

			&::before {
				content: "";
				width: 80px;
				height: 2px;
				background-color: var(--red);
				position: absolute;
				rotate: 60deg;
			}

			&::after {
				content: "";
				width: 50px;
				height: 2px;
				background-color: var(--red);
				position: absolute;
				rotate: -60deg;
			}
		}
	}

	@media (max-width: 720px) {
		.social-links {
			display: none;
		}
	}
</style>
